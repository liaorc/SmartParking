<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/item_red240x240"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="进行中"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_background"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:id="@+id/confirmed_list_item_imageView"
            android:src="@drawable/incomplete_order240x240"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmed_list_item_appointmentTimeLine"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/confirmed_list_item_imageView"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/order_time_icon240x240"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/actionbar_background"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:id="@+id/order_detail_submitTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/actionbar_background"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="time_test_12:00"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/confirmed_list_item_imageView"
            android:layout_below="@id/confirmed_list_item_appointmentTimeLine"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:src="@drawable/location_icon150x240"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/actionbar_background"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/order_detail_parkNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/actionbar_background"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="park_name_test"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="   订单信息   "
            android:textSize="25sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/actionbar_background"
            android:background="@drawable/stroke_box_green"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/order_detail_qrcode"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            />
    </LinearLayout>
</LinearLayout>